---
import type { HeaderLink, LogoData } from "@barbajoe/svelte-lib";
import { Layout as SvelteLayout } from "@barbajoe/svelte-lib";

export interface Props {
	title: string;
}

const { title } = Astro.props;

const route = Astro.url.pathname;

const routes = {
	home: "/",
	css: "/css-lib/",
	svelte: "/svelte-lib/",
	react: "/react-lib/",
};
const links: HeaderLink[] = [
	{ href: routes.css, text: "CSS", active: route.startsWith(routes.css) },
	{
		href: routes.svelte,
		text: "Svelte",
		active: route.startsWith(routes.svelte),
	},
	{ href: routes.react, text: "React", active: route.startsWith(routes.react) },
];

const logo: LogoData = {
	href: routes.home,
	src: "/favicon.ico",
	alt: "Logo",
	ariaLabel: "go to landing page",
	text: "barbajoe's svelte library",
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="barbajoe's library staging environment" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div>
      <SvelteLayout links={links} logo={logo}>
        <slot />
      </SvelteLayout>
    </div>
  </body>
</html>
