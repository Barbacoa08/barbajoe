{
  "name": "svelte-lib",
  "version": "0.2.0",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "all": "pnpm i && pnpm format && pnpm lint && pnpm build && pnpm check && pnpm test",
    "clean": "rm -rf coverage dist .svelte-kit",
    "dev": "vite build --watch",
    "dev:sveltekit": "vite dev",
    "build": "pnpm clean && pnpm run package && vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "pnpm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "prettier --plugin-search-dir . --check . && eslint ./src",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "peerDependencies": {
    "css-lib": "workspace:*",
    "svelte": "3.54.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "2.1.0",
    "@sveltejs/kit": "1.20.4",
    "@sveltejs/package": "2.0.2",
    "@sveltejs/vite-plugin-svelte": "2.4.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/svelte": "3.2.2",
    "@types/jest-axe": "3.5.5",
    "@types/testing-library__jest-dom": "5.14.6",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.60.0",
    "@vitest/coverage-v8": "0.32.2",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-svelte": "2.31.0",
    "jest-axe": "7.0.1",
    "jsdom": "22.1.0",
    "prettier": "2.8.8",
    "prettier-plugin-svelte": "2.10.1",
    "publint": "0.1.12",
    "svelte": "3.59.1",
    "svelte-check": "3.4.3",
    "tslib": "2.5.3",
    "typescript": "5.1.3",
    "vite": "4.3.9",
    "vitest": "0.32.2"
  }
}
