{
  "name": "barbajoe",
  "version": "0.1.0",
  "description": "A PNPM Workspace that untilizes Astro as an app and a React and Svelte component library.",
  "author": "Joe S",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Barbacoa08/barbajoe/"
  },
  "keywords": [
    "astro",
    "pnpm",
    "react",
    "svelte",
    "monorepo",
    "workspace",
    "workspaces",
    "component-library"
  ],
  "scripts": {
    "all": "pnpm i && pnpm clean && pnpm format && pnpm lint && pnpm build",
    "github": "pnpm i && pnpm lint && pnpm build",
    "clean": "rm -rf coverage badges dist",
    "format": "yarn prettier --write ./src --loglevel warn",
    "lint": "eslint src -c ./.eslintrc.json5",
    "build": "pnpm build:react-lib && pnpm build:svelte-lib && pnpm build:blog && pnpm build:landing",
    "build:blog": "pnpm -F blog build",
    "build:landing": "pnpm -F landing build",
    "build:react-lib": "pnpm -F react-lib build",
    "build:svelte-lib": "pnpm -F svelte-lib build",
    "start": "pnpm start:react-lib & pnpm start:svelte-lib & pnpm start:blog",
    "start:blog": "pnpm -F blog start",
    "start:landing": "pnpm -F landing start",
    "start:react-lib": "pnpm -F react-lib dev",
    "start:svelte-lib": "pnpm -F svelte-lib dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "blog": "pnpm -F blog",
    "landing": "pnpm -F landing",
    "react-lib": "pnpm -F react-lib",
    "svelte-lib": "pnpm -F svelte-lib"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.25.0",
    "eslint-plugin-astro": "^0.20.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.9",
    "prettier": "^2.7.1",
    "prettier-plugin-astro": "^0.5.5",
    "prettier-plugin-svelte": "^2.7.1"
  }
}
